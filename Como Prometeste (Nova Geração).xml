<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.2" modifiedIn="OpenLP 2.2" modifiedDate="2016-01-20T20:44:27">
  <properties>
    <titles>
      <title>Como Prometeste</title>
    </titles>
    <authors>
      <author>Nova Geração</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Então vem como Prometeste</lines>
    </verse>
    <verse name="v2a">
      <lines>Derrama o teu Esírito</lines>
    </verse>
    <verse name="v2b">
      <lines>Nos ama como Pai<br/>Nos ama como irmão</lines>
    </verse>
    <verse name="v3">
      <lines>Nos ama como leão<br/>Feroz igual não há</lines>
    </verse>
    <verse name="v4">
      <lines>Teu amor traforma-me<br/>Fortemente muda-me</lines>
    </verse>
    <verse name="v5">
      <lines>Envolve-me <br/>Em quem tú és </lines>
    </verse>
  </lyrics>
</song>
